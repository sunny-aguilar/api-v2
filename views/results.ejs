<!-- header -->
<%- include('partials/header') %>

<!-- page content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-6 text-center">
            <h1 class="display-4 text-uppercase font-weight-bolder">Results Page</h1>
            <p><%= data['search'].length %></p>
            <% data['Search'].forEach(function(movie) { %>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>
                            <%= movie['Title'] %>
                        </strong>
                        - <%= movie['Year'] %>
                        </li>
                </ul>
            <% }); %>
            </br>
            <a href="/" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Search Again</a>
        </div>
    </div>
</div>

<!-- footer -->
<%- include('partials/footer') %>